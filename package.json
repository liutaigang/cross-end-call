{
  "name": "cross-end-call",
  "version": "1.0.0",
  "description": "A simple cross-end calling library that does not implement any protocol and can be used to call capabilities between ends. Implement communication model into method calling model",
  "main": "index.js",
  "scripts": {
    "test": "run-p test:*",
    "test:core": "pnpm run -F cec-core test",
    "test:client-server": "pnpm run -F cec-client-server test",
    "build": "run-s build:*",
    "build:core": "pnpm run -F cec-core build",
    "build:client-server": "pnpm run -F cec-client-server build",
    "build:vscode-extension": "pnpm run -F vscode-extension compile",
    "build:vscode-extension-view": "pnpm run -F vscode-extension-view build",
    "clean": "run-p clean:* && rm -rf node_modules",
    "clean:core": "pnpm run -F cec-core clean",
    "clean:client-server": "pnpm run -F cec-client-server clean",
    "clean:vscode-extension": "pnpm run -F vscode-extension clean",
    "clean:vscode-extension-view": "pnpm run -F vscode-extension-view clean",
    "clean:electron-example": "pnpm run -F electron-example clean",
    "format": "prettier . --write",
    "prepare": "husky install",
    "electron": "pnpm run -F electron-example electron"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/jest": "^29.5.3",
    "dts-bundle-generator": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.1",
    "rollup-merge-config": "^0.0.12",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
